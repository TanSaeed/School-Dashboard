@model IEnumerable<Asp.net_MVC_TestpreparationAppDemo.Models.DualDatabaseTestSchemeQuestion>
@{
    ViewBag.Title = "ViewQuestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewQuestions</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupingId)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupingId)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>

<form action="http://localhost:59990/DualDatabaseTestSchemeQuestions/ViewQuestions" method="get">
    <input type="text" name="id" /> SearchId<br />
    <input type="submit" value="submit" /> <br />

</form>
<br />
<br />

@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("searchid") SearchID<br />
        <input type="submit" value="Filter" />
    </p>
}


 

